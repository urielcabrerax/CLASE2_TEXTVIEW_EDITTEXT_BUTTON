<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:background="#9BE2EB"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DATOS DE LA PERSONA"
        android:textColor="@color/design_default_color_error"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C.I"
        android:textColor="#121212"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="CÃ©dula de identidad"
        android:inputType="text"
        android:maxLength="8"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="NOMBRES Y APELLIDOS"
        android:textSize="20sp"
        android:gravity="center" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Ingrese su nombre y apellido"
        android:inputType="text"
        android:maxLength="200"
        android:minHeight="48dp"
        android:textColor="#F00404" />

    <!-- LinearLayout para los botones horizontalmente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:backgroundTint="#0B0000"
            android:id="@+id/bRegistrar"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar"
            android:backgroundTint="#0B0000"
            android:id="@+id/bLimpiar"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</LinearLayout>
